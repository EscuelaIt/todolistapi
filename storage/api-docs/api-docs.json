{
    "openapi": "3.0.0",
    "info": {
        "title": "Todo Rest API",
        "description": "Este API permite implementar un sencillo sistema de 'To do list' con fines did√°cticos.",
        "contact": {
            "name": "Soporte API",
            "url": "https://escuela.it/contacto",
            "email": "contacto@escuela.it"
        },
        "license": {
            "name": "MIT",
